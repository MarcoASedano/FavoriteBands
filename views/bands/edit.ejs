<% include ../partials/header %>

<header>
  <div class="h-25 w-100 d-inline-block">
    <div class="w-50 d-block mx-auto mt-4">
      <img class="img-fluid rounded mx-auto d-block" src="<%= band.img %>">
    </div>
  </div>
</header>

<div class="container">
  <div class="card w-75 mx-auto my-4">
    <h1 class="card-header"><%= band.name %></h1>
    <div class="card-body">
      <p class="card-text">Edit band info:</p>
      <form action="/bands/<%= band._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="band[name]" value="<%= band.name %>" required>
        </div>
        <div class="form-group">
          <label for="wiki">Wiki Link</label>
          <input type="link" class="form-control" id="wiki" name="band[wiki]" value="<%= band.wiki %>" required>
        </div>
        <div class="form-group">
          <label for="img">Image Link</label>
          <input type="link" class="form-control" id="img" name="band[img]" value="<%= band.img %>" required>
        </div>
        <button type="submit" class="btn btn-success btn-sm">Submit</button>
        <a href="/bands" class="btn btn-outline-primary btn-sm">Cancel</a>
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer %>
